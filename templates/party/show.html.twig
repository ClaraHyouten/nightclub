{% extends 'base.html.twig' %}

{% block title %}Party{% endblock %}

{% block body %}
    <h1>Party</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ party.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ party.name }}</td>
            </tr>
            <tr>
                <th>DateParty</th>
                <td>{{ party.dateParty ? party.dateParty|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ party.description }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ party.createAt ? party.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_party_index') }}">back to list</a>

    <a href="{{ path('app_party_edit', {'id': party.id}) }}">edit</a>

    {{ include('party/_delete_form.html.twig') }}
{% endblock %}
